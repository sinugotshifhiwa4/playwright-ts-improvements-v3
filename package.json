{
  "name": "playwright-ts-improvements-v3",
  "version": "3.0.0",
  "description": "Playwright Typescript version 3 improvements",
  "keywords": [
    "playwright",
    "typescript",
    "dotenv",
    "cross-env",
    "axios",
    "argon2",
    "hashing",
    "winston",
    "reporting",
    "reports",
    "error-handling",
    "eslint",
    "prettier"
  ],
  "license": "ISC",
  "author": "Tshifhiwa Sinugo",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "type:check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "spell": "cspell \"**/*.{ts,js,md}\"",
    "quality": "npm run type:check && npm run lint && npm run format:check && npm run spell",
    "pretest:encryption:dev": "npm run quality",
    "pretest:encryption:uat": "npm run quality",
    "pretest:ui:dev": "npm run quality",
    "pretest:ui:uat": "npm run quality",
    "pretest:api:dev": "npm run quality",
    "pretest:api:uat": "npm run quality",
    "pretest:db:dev": "npm run quality",
    "pretest:db:uat": "npm run quality",
    "pretest:all:dev": "npm run quality",
    "pretest:all:uat": "npm run quality",
    "pretest:failed:dev": "npm run quality",
    "pretest:failed:uat": "npm run quality",
    "test:encryption:dev": "cross-env ENV=dev SKIP_BROWSER_INIT=true npx playwright test tests/encryption",
    "test:encryption:uat": "cross-env ENV=uat SKIP_BROWSER_INIT=true npx playwright test tests/encryption",
    "test:ui:dev": "cross-env ENV=dev npx playwright test tests/ui",
    "test:ui:uat": "cross-env ENV=uat npx playwright test tests/ui",
    "test:api:dev": "cross-env ENV=dev npx playwright test tests/api",
    "test:api:uat": "cross-env ENV=uat npx playwright test tests/api",
    "test:db:dev": "cross-env ENV=dev npx playwright test tests/db",
    "test:db:uat": "cross-env ENV=uat npx playwright test tests/db",
    "test:all:dev": "cross-env ENV=dev npx playwright test tests",
    "test:all:uat": "cross-env ENV=uat npx playwright test tests",
    "test:failed:dev": "cross-env ENV=dev npx playwright test --last-failed",
    "test:failed:uat": "cross-env ENV=uat npx playwright test --last-failed",
    "ui": "npx playwright test --ui",
    "record": "npx playwright codegen",
    "report": "npx playwright show-report",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "argon2": "^0.43.0",
    "axios": "^1.9.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "moment-timezone": "^0.6.0",
    "playwright": "^1.52.0",
    "playwright-trx-reporter": "^1.0.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.30",
    "cspell": "9.0.2",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.1",
    "ortoni-report": "3.0.2",
    "prettier": "3.5.3"
  }
}
